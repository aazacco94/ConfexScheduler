{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "rules": {
        "arrow-parens": ["error", "as-needed"],
        "import/no-unresolved": "warn",
        "no-await-in-loop": "warn",
        "no-unused-vars": "warn",
        "no-plusplus": "off"
    }
}
